<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tax_nav_graph"
    app:startDestination="@id/taxRecipientInfoFragment">

    <fragment
        android:id="@+id/taxRecipientInfoFragment"
        android:name="ru.russianpost.payments.features.tax.ui.TaxRecipientInfoFragment"
        android:label="@string/ps_tax_recipient_info_title"
        tools:layout="@layout/ps_fragment_form" >
        <action
            android:id="@+id/to_tax_payer_action"
            app:destination="@id/taxPayerInfoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/to_payment_done_action"
            app:destination="@id/taxPaymentDoneFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/tax_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/taxPayerInfoFragment"
        android:name="ru.russianpost.payments.features.tax.ui.TaxPayerInfoFragment"
        android:label="@string/ps_tax_payer_info_title"
        tools:layout="@layout/ps_fragment_form" >
        <action
            android:id="@+id/to_tax_payment_action"
            app:destination="@id/taxPaymentInfoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/taxPaymentInfoFragment"
        android:name="ru.russianpost.payments.features.tax.ui.TaxPaymentInfoFragment"
        android:label="@string/ps_tax_payment_info_title"
        tools:layout="@layout/ps_fragment_form" >
        <action
            android:id="@+id/to_tax_payment_confirmation_action"
            app:destination="@id/taxPaymentConfirmationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/taxPaymentConfirmationFragment"
        android:name="ru.russianpost.payments.features.tax.ui.TaxPaymentConfirmationFragment"
        android:label="@string/ps_tax_payment_confirmation_title"
        tools:layout="@layout/ps_fragment_form" >
        <action
            android:id="@+id/to_payment_card_action"
            app:destination="@id/paymentCardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/paymentCardFragment"
        android:name="ru.russianpost.payments.features.payment_card.ui.PaymentCardFragment"
        android:label="@string/ps_tax_payment_card_title"
        tools:layout="@layout/ps_fragment_form" >
        <argument android:name="params"
            app:argType="float" />
        <action
            android:id="@+id/to_payment_done_action"
            app:destination="@id/taxPaymentDoneFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/tax_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/taxPaymentDoneFragment"
        android:name="ru.russianpost.payments.features.tax.ui.TaxPaymentDoneFragment"
        android:label="@string/ps_tax_payment_done_title"
        tools:layout="@layout/ps_fragment_form" >
        <argument android:name="params"
            app:argType="ru.russianpost.payments.features.payment_card.ui.PaymentDoneParams"
            android:defaultValue="NONE" />
        <action
            android:id="@+id/to_view_check_action"
            app:destination="@id/viewCheckFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/viewCheckFragment"
        android:name="ru.russianpost.payments.features.payment_card.ui.ViewCheckFragment"
        android:label="@string/ps_tax_view_check"
        tools:layout="@layout/ps_fragment_view_check" >
        <argument android:name="params"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/to_payment_done_dialog_action"
            app:destination="@id/paymentDoneDialogFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <dialog
        android:id="@+id/paymentDoneDialogFragment"
        android:name="ru.russianpost.payments.features.payment_card.ui.PaymentDoneDialogFragment"
        android:label="@string/ps_tax_view_check"
        tools:layout="@layout/ps_fragment_form" >
        <action
            android:id="@+id/to_payment_done_action"
            app:destination="@id/taxPaymentDoneFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/tax_nav_graph"
            app:popUpToInclusive="true"/>
    </dialog>

</navigation>